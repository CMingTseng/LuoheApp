<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_input_phoneno"
        style="@style/font_time_grey"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_white_round"
        android:hint="请输入您的手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:padding="5dp" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rect_white_round"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_input_sms"
            style="@style/font_time_grey"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@color/transparent"
            android:hint="请输入短信验证码"

            android:inputType="number"
            android:padding="5dp" />

        <View style="@style/divider_style_ver" />

        <TextView
            android:id="@+id/tv_get_token"
            style="@style/font_time_grey"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="获取验证码" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_input_ps"
        style="@style/font_time_grey"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rect_white_round"
        android:hint="请输入新密码"
        android:padding="5dp"
        android:password="true"
        android:singleLine="true" />

    <TextView
        android:id="@+id/commit"
        style="@style/font_desc_black"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/desc"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_blue"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white" />


</LinearLayout>