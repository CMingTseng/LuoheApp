<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_login" />

    <EditText
        android:id="@+id/tv_account"
        style="@style/font_time_grey"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_white_round"
        android:hint="用户名"
        android:padding="5dp" />

    <EditText
        android:id="@+id/tv_password"
        style="@style/font_time_grey"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_white_round"
        android:hint="密码"
        android:inputType="textPassword"
        android:padding="5dp" />

    <TextView

        android:id="@+id/tv_forget_pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:gravity="right|center_vertical"
        android:text="忘记密码？"
        android:textColor="@color/app_main_blue" />

    <TextView
        android:id="@+id/tv_login"
        style="@style/font_title_white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_blue_bound"
        android:gravity="center"
        android:text="立即登录" />


</LinearLayout>