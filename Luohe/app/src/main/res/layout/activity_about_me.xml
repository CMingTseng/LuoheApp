<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/default_round_icon" />

        <TextView
            android:id="@+id/name"
            style="@style/font_desc_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatar"
            android:layout_toRightOf="@id/avatar"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_diamond"
            android:singleLine="true"
            android:text="张三三" />

        <TextView
            android:id="@+id/address_time"
            style="@style/font_time_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/avatar"
            android:singleLine="true"
            android:text="张三三" />

        <TextView
            android:id="@+id/desc"
            style="@style/font_time_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/avatar"
            android:singleLine="true"
            android:text="@string/common_desc" />

    </RelativeLayout>

    <View style="@style/divider_style_hor" />

    <View
        style="@style/divider_style_hor"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_attention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_count_attention"
                style="@style/font_title_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123" />

            <TextView
                style="@style/font_time_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注" />

        </LinearLayout>

        <View style="@style/divider_style_ver" />

        <LinearLayout
            android:id="@+id/linear_fans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_count_fan"
                style="@style/font_title_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123" />

            <TextView
                style="@style/font_time_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/divider_style_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/tv_caizhi_rank"
            style="@style/font_time_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_award"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="累计才值排名：第%1s位" />

        <TextView
            android:id="@+id/tv_count_caizhi"
            style="@style/font_time_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_rank"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="累计才值:105" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_count_caizhi_now"
                style="@style/font_time_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_coin"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="现有才值：55" />


        </LinearLayout>

        <com.luohe.android.luohe.widget.widget.TagListView
            android:id="@+id/flow_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            style="@style/font_time_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"

            android:padding="5dp"
            android:text="才者风格" />

        <GridView
            android:id="@+id/tagview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="8dp"
            android:numColumns="3"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="8dp" />

    </LinearLayout>

</LinearLayout>