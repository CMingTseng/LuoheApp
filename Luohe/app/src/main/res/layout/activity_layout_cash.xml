<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <EditText
            android:id="@+id/cash_et_true_name"
            style="@style/font_time_grey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_white_round"
            android:hint="真实姓名"
            android:padding="5dp" />

        <EditText
            android:id="@+id/cash_et_idcard"
            style="@style/font_time_grey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_white_round"
            android:hint="收款人身份证"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款方式 :"
                android:textColor="@color/color_cash"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/cash_tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="@color/app_main_blue"
                android:textSize="24sp" />
        </LinearLayout>
        <EditText
            android:id="@+id/cash_et_alipay_account"
            style="@style/font_time_grey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_white_round"
            android:hint="支付宝账号"
            android:padding="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="可提现金额 :"
                android:textColor="@color/color_cash"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/cash_tv_have_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="153.23"
                android:textColor="#f00000"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="元"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cash_Withdrawal_amount"
            style="@style/font_time_grey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_cash_background"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/cash_et_use_money"
                style="@style/font_time_grey"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:background="@drawable/rect_cash_money_round"
                android:hint="提现金额"
                android:padding="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:padding="10dp"
                android:text="元"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/cash_tv_submit_applications"
            style="@style/font_title_white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_blue_bound"
            android:gravity="center"
            android:text="提交申请" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:gravity="right|top"
            android:padding="3dp"
            android:text="提现说明"
            android:textColor="#1c95d1"
            android:textSize="16sp" />

</LinearLayout>